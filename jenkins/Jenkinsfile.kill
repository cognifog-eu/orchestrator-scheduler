pipeline {
    agent {
        node {
            label 'jenkins-agent'
        }
    }

    stages {

        // ****************
        // *** KILL APP ***
        // ****************
        stage("Kill_The_App"){
            steps {
               withKubeConfig([credentialsId: 'k8s-jenkins']) {
                   sh 'kubectl delete -f jenkins/manifests.yaml -n cognifog-dev || true'
               }
            }
        }
    }
}